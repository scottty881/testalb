{
  "name": "albion",
  "version": "1.0.0",
  "private": true,
  "scripts": {
    "build": "next build",
    "dev": "next dev",
    "debug": "NODE_OPTIONS='--inspect' next dev",
    "format": "prettier --write .",
    "pregenerate": "find . -regex '.*__generated__' -type d -prune -exec rm -r {} \\;",
    "graphql-schema": "npm run ts-node scripts/introspect-graphql-schema.ts && prettier --write schema.graphql",
    "generate": "npx apollo client:codegen --target=typescript && graphql-codegen",
    "heroku-prebuild": "npm run install-global-packages",
    "heroku-postbuild": "next build",
    "install-global-packages": "npm install -g graphql@15.5.1 apollo@2.33.6",
    "lint": "eslint . --ext ts --ext tsx --ext js",
    "migrate": "prisma migrate dev",
    "postinstall": "npm run generate",
    "prepare": "husky install",
    "reset": "prisma migrate reset",
    "seed": "prisma db seed --preview-feature",
    "start": "next start -p $PORT",
    "ts-node": "ts-node --compiler-options '{\"module\":\"CommonJS\"}' -r tsconfig-paths/register",
    "type-check": "tsc --pretty --noEmit"
  },
  "dependencies": {
    "@apollo/client": "^3.3.21",
    "@prisma/client": "^2.30.3",
    "@tailwindcss/aspect-ratio": "^0.2.0",
    "@tailwindcss/forms": "^0.3.3",
    "apollo-server-micro": "^2.25.1",
    "autoprefixer": "^10.3.1",
    "cross-fetch": "^3.1.4",
    "graphql": "^15.5.1",
    "next": "^11.0.0",
    "postcss": "^8.3.5",
    "react": "^17.0.2",
    "react-dom": "^17.0.2",
    "tailwindcss": "^2.2.7"
  },
  "devDependencies": {
    "@graphql-codegen/add": "^2.0.2",
    "@graphql-codegen/cli": "^2.1.1",
    "@graphql-codegen/typescript": "^1.23.0",
    "@graphql-codegen/typescript-resolvers": "^1.19.5",
    "@types/node": "^15.12.2",
    "@types/npm-which": "^3.0.1",
    "@types/react": "17.0.19",
    "@types/tailwindcss": "^2.2.1",
    "@typescript-eslint/eslint-plugin": "4.29.3",
    "@typescript-eslint/parser": "4.29.3",
    "eslint": "7.32.0",
    "eslint-config-next": "^11.0.1",
    "eslint-config-prettier": "8.3.0",
    "eslint-plugin-react": "7.24.0",
    "husky": "^7.0.2",
    "lint-staged": "11.1.1",
    "prettier": "2.3.2",
    "prisma": "^2.30.3",
    "ts-node": "^10.1.0",
    "tsconfig-paths": "^3.10.1",
    "typescript": "4.3.5",
    "unique-names-generator": "^4.6.0"
  },
  "lint-staged": {
    "*.@(ts|tsx)": [
      "npm run lint",
      "npm run format"
    ]
  }
}
